{
  // Editor Color Customizations
  // -------------
  "workbench.colorCustomizations": {
    "sideBarTitle.foreground": "#fff",
    "menu.foreground": "#fff"
  },
  // Editor Settings
  // -------------
  "editor.fontFamily": "\"cascadia code\",fira code,Operator Mono, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 17,
  "editor.fontLigatures": true,
  "editor.fontWeight": "400",
  "editor.lineHeight": 25,
  "editor.letterSpacing": 0.5,
  "editor.tabSize": 2,
  "editor.renderWhitespace": "none",
  // "editor.snippetSuggestions": "top",
  "editor.minimap.enabled": true,
  "editor.formatOnSave": true,
  "editor.scrollbar.verticalScrollbarSize": 0,
  "editor.mouseWheelZoom": true,
  "editor.cursorWidth": 3,
  "editor.cursorSmoothCaretAnimation": true,
  "editor.renderLineHighlight": "gutter",
  "editor.cursorBlinking": "smooth",
  "editor.smoothScrolling": true,
  "editor.accessibilitySupport": "on",
  "editor.linkedEditing": true,
  "editor.wordWrap": "on",
  // PATH INTELLISENSE SETTINGS
  // -------------
  "typescript.suggest.paths": false,
  "javascript.suggest.paths": false,
  // -------------
  // Prettier Settings
  // -------------
  "editor.defaultFormatter": "rvest.vs-code-prettier-eslint",
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  "editor.formatOnSaveMode": "file",
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  // Live Server Settings
  // -------------
  "liveServer.settings.donotVerifyTags": true,
  "liveServer.settings.donotShowInfoMsg": true,
  // -------------
  // Terminal Settings
  // -------------
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.cursorWidth": 4,
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.cursorStyle": "line",
  // Tabnine Settings
  // -------------
  "tabnine.experimentalAutoImports": true,
  // -------------
  // -------------
  "zenMode.hideLineNumbers": false,
  "workbench.preferredHighContrastLightColorTheme": "Default Dark+",
  "diffEditor.codeLens": true,
  "window.commandCenter": false,
  "files.autoSave": "afterDelay",
  "emmet.syntaxProfiles": {
    "javascript": "jsx"
  },
  "files.trimTrailingWhitespace": true,
  "html.suggest.html5": true,
  "window.zoomLevel": 0,
  "extensions.autoUpdate": true,
  "workbench.statusBar.visible": false,
  "breadcrumbs.enabled": false,
  "workbench.activityBar.visible": false,
  "workbench.layoutControl.enabled": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "cSpell.userWords": [
    "Animation",
    "auto",
    "bootstrap",
    "Brand",
    "Caret",
    "class",
    "Container",
    "cursor",
    "dark",
    "Features",
    "from",
    "gutter",
    "Highlight",
    "home",
    "href",
    "import",
    "Line",
    "Link",
    "mouse",
    "Name",
    "Navbar",
    "none",
    "pricing",
    "react",
    "render",
    "return",
    "signin",
    "Smooth",
    "snippet",
    "true",
    "variant",
    "Wheel",
    "Whitespace",
    "Width"
  ],
  "workbench.iconTheme": "sweet-vscode-icons",
  "workbench.colorTheme": "Ayu Dark"
}
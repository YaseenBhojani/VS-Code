{
  // Editor Color Customizations
  // -------------
  "workbench.colorCustomizations": {
    "editorCursor.foreground": "#fff",
    "editor.background": "#0f0e0e",
    "editorBracketMatch.background": "#000",
    "editorGutter.background": "#0f0e0e",
    "editorLineNumber.activeForeground": "#d000ff",
    "editor.lineHighlightBackground": "#0e0f0f",
    "list.inactiveSelectionForeground": "#d000ff",
    "menu.background": "#131314",
    "sideBar.background": "#191818",
    "sideBarTitle.foreground": "#fff",
    "statusBar.background": "#000",
    "terminal.background": "#040109",
    "terminalCursor.foreground": "#fff",
    "terminal.foreground": "#fff",
    "tab.activeBorderTop": "#d000ff"
  },

  // Editor Settings
  // -------------
  "editor.fontFamily": "\"cascadia code\",fira code,Operator Mono, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 17,
  "editor.fontLigatures": true,
  "editor.fontWeight": "400",
  "editor.lineHeight": 25,
  "editor.letterSpacing": 0.5,
  "editor.tabSize": 2,
  "editor.renderWhitespace": "none",
  // "editor.snippetSuggestions": "top",
  "editor.minimap.enabled": true,
  "editor.formatOnSave": true,
  "editor.scrollbar.verticalScrollbarSize": 0,
  "editor.mouseWheelZoom": true,
  "editor.cursorWidth": 3,
  "editor.cursorSmoothCaretAnimation": true,
  "editor.renderLineHighlight": "gutter",
  "editor.cursorBlinking": "smooth",
  "editor.smoothScrolling": true,
  "editor.accessibilitySupport": "on",
  "editor.linkedEditing": true,
  "editor.wordWrap": "on",

  // PATH INTELLISENSE SETTINGS
  // -------------
  "typescript.suggest.paths": false,
  "javascript.suggest.paths": false,
  // -------------

  // Prettier Settings
  // -------------
  "prettier.trailingComma": "all",
  "prettier.semi": true,
  "prettier.bracketSpacing": true,
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Live Server Settings
  // -------------
  "liveServer.settings.donotVerifyTags": true,
  "liveServer.settings.donotShowInfoMsg": true,
  // -------------

  // Terminal Settings
  // -------------
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.cursorWidth": 4,
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.cursorStyle": "line",

  // Tabnine Settings
  // -------------
  "tabnine.experimentalAutoImports": true,
  // -------------

  // -------------
  "zenMode.hideLineNumbers": false,
  "workbench.preferredHighContrastLightColorTheme": "Default Dark+",
  "diffEditor.codeLens": true,
  "window.commandCenter": false,
  "files.autoSave": "afterDelay",
  "emmet.syntaxProfiles": {
    "javascript": "jsx"
  },
  "files.trimTrailingWhitespace": true,
  "html.suggest.html5": true,
  "window.zoomLevel": 0,
  "extensions.autoUpdate": true,
  "workbench.statusBar.visible": false,
  "breadcrumbs.enabled": false,
  "workbench.activityBar.visible": false,
  "workbench.layoutControl.enabled": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "workbench.iconTheme": "sweet-vscode-icons",
  "workbench.colorTheme": "Sweet vscode"
}

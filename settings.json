{
  // Editor Color Customizations
  // -------------
  "workbench.colorCustomizations": {
    "editorCursor.foreground": "#ffdd00",
    "editor.background": "#131314",
    "editorBracketMatch.background": "#000",
    "menu.background": "#131314",
    "sideBar.background": "#212122",
    "terminal.background": "#040109",
    "terminalCursor.foreground": "#ffdd00",
    "terminal.foreground": "#fff",
    "statusBar.background": "#000"
  },

  // Editor Settings
  // -------------
  "editor.fontFamily": "\"cascadia code\",fira code,Operator Mono, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 17,
  "editor.fontLigatures": true,
  "editor.fontWeight": "400",
  "editor.lineHeight": 25,
  "editor.letterSpacing": 0.5,
  "editor.tabSize": 2,
  "editor.renderWhitespace": "none",
  // "editor.snippetSuggestions": "top",
  "editor.minimap.enabled": true,
  "editor.formatOnSave": true,
  "editor.scrollbar.verticalScrollbarSize": 6,
  "editor.mouseWheelZoom": true,
  "editor.cursorWidth": 3,
  "editor.cursorSmoothCaretAnimation": true,
  "editor.renderLineHighlight": "gutter",
  "editor.cursorBlinking": "smooth",
  "editor.smoothScrolling": true,

  // PATH INTELLISENSE SETTINGS
  // -------------
  "typescript.suggest.paths": false,
  "javascript.suggest.paths": false,
  "editor.linkedEditing": true,
  "editor.wordWrap": "on",
  // -------------

  // Prettier Settings
  // -------------
  "prettier.trailingComma": "all",
  "prettier.semi": true,
  "prettier.bracketSpacing": true,
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Live Server Settings
  // -------------
  "liveServer.settings.donotVerifyTags": true,
  "liveServer.settings.donotShowInfoMsg": true,
  // -------------

  // Terminal Settings
  // -------------
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.cursorWidth": 4,
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.cursorStyle": "line",

  // Tabnine Settings
  // -------------
  "tabnine.experimentalAutoImports": true,
  // -------------

  // -------------
  "zenMode.hideLineNumbers": false,
  "workbench.preferredHighContrastLightColorTheme": "Default Dark+",
  "diffEditor.codeLens": true,
  "window.commandCenter": false,
  "files.autoSave": "afterDelay",
  "emmet.syntaxProfiles": {
    "javascript": "jsx"
  },
  "files.trimTrailingWhitespace": true,
  "html.suggest.html5": true,
  "window.zoomLevel": 0,
  "extensions.autoUpdate": true,
  "workbench.iconTheme": "vscode-icons",
  "debug.javascript.autoAttachFilter": "always"
}
